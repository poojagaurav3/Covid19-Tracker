                text_size: (self.width, None)
                font_size: '14sp'
                size_hint_y: 0.30
                halign:'center'
                valign: 'top'
                text: "Isolate yourself and your immediate family members"


            Label:
                size_hint_y: 0.45
                text_size: (self.width, None)
                font_size: '12sp'
                valign: 'top'
                text: "* Your risk level is based both on self-assessment data provided by you as well as any close contact this app detects with other who may later be diagnosed"


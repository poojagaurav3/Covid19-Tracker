<LoginWindow>:
    name: "login"
    canvas.before:
        Color:
            rgba: 1, 1, 1, 1
        Rectangle:
            pos: self.pos
            size: self.size

    phone: phone
    password: passw

    FloatLayout:
        size: self.parent.size


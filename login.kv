<LowRiskStatus>:
    name: "lowRiskScreen"

    GridLayout:
        cols: 1
        rows: 3
        padding: 20, 10, 20, 10
        Label:
            bold: True
            size_hint_y: 0.15
            font_size: '21sp'
            #color: 0,0.4,1,1
            # pos_hint: {"x":0.1, "y":0.48}
            text: "COVID-19 App"


                            font_size: (root.width**2 + root.height**2) / 16**4

                        Label:
                            size_hint: 0.5,0.12
                            pos_hint: {"x":0.1, "top":0.91-0.13}
                            text: "What is your Age"
                            text_size: (self.width, None)
                            font_size: (root.width**2 + root.height**2) / 16**4

                        TextInput:
                            pos_hint: {"x":0.5, "top":0.89-0.13}
                            size_hint: 0.4, 0.09
                            id: age
                            font_size: (root.width**2 + root.height**2) / 16**4

                        Label:
                            size_hint: 0.5,0.12
                            pos_hint: {"x":0.1, "top":0.92-0.13*2}
                            text: "What is your Gender"
                            text_size: (self.width, None)
                            font_size: (root.width**2 + root.height**2) / 16**4

                        TextInput:
                            pos_hint: {"x":0.5, "top":0.90-0.13*2}
                            size_hint: 0.4, 0.09
                            id: gender
                            font_size: (root.width**2 + root.height**2) / 16**4

                        Label:
                            size_hint: 0.5,0.12
                            pos_hint: {"x":0.08, "top":0.93-0.13*3}
                            text_size: (self.width, None)
                            text: "Your body temperature"
                            font_size: (root.width**2 + root.height**2) / 16**4

                        TextInput:
                            pos_hint: {"x":0.5, "top":0.91-0.13*3}
                            size_hint: 0.4, 0.09
                            id: fever
                            input_filter: "float"
                            font_size: (root.width**2 + root.height**2) / 16**4

                        Label:
                            size_hint: 0.5,0.12
                            pos_hint: {"x":0.1, "top":0.94-0.13*4}
                            text: "Your travel history: "
                            text_size: (self.width, None)
                            font_size: (root.width**2 + root.height**2) / 16**4

                        TextInput:
                            pos_hint: {"x":0.5, "top":0.92-0.13*4}
                            size_hint: 0.4, 0.09
                            id: travel
                            font_size: (root.width**2 + root.height**2) / 16**4

                        Label:
                            size_hint: 0.5,0.12
                            pos_hint: {"x":0.09, "top":0.95-0.13*5}
                            text: "Do you have following symptoms: "
                            text_size: (self.width, None)
                            font_size: (root.width**2 + root.height**2) / 16**4

                        Button:
                            pos_hint: {"x":0.5, "top":0.93-0.13*5}

            bold: True
            size_hint_y: 0.15
            font_size: '21sp'
            #color: 0,0.4,1,1
            text: "COVID-19 App"

        GridLayout:
            cols: 1
            rows:3
            size_hint_y: 0.40
            padding: 5, 20, 5, 5
            canvas:
                Color:
                    rgba: 0.97, 0.5,0.02,0.5
                Rectangle:
                    pos: self.pos
                    size : self.width, self.height
            GridLayout:
                cols: 2
                rows: 1
                size_hint_y: 0.40
                Image:

            BoxLayout:
                size_hint_y: 0.10
                padding: 0, 10, 0, 10
                Button:
                    size_hint_x: 0.4
                    size: 0.2, self.height
                    background_color: 1, 0.6,0,0.7
                    text: "1 Isolate Yourself"
                    on_release:
                        root.manager.transition.direction = "right"
                        root.nextSteps()

                Button:
                    size_hint_x: 0.4
                    background_color: 0,0.4,1,0.7
                    background_color: 1, 0.6,0,0.7

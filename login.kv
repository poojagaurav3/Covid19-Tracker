                            id: btnSymptom
                            font_size: (root.width**2 + root.height**2) / 16**4
                            text: 'Press'
                            on_parent: dropdown.dismiss()
                            on_release: dropdown.open(self)
                            height: '48dp'
                            background_color: 0,0.4,1,0.6

                        DropDown:
                            id: dropdown
                            on_select: btnSymptom.text = '{}'.format(args[1])

                            Button:
                                text: 'Fever or chills'
                                background_color: 1,1,1,0.4
                                color: 0,0.4,1,0.9
                                size_hint_y: None
                                height: '35dp'
                                on_release: dropdown.select('Fever or chills')

                            Button:
                                text: 'Cough'
                                size_hint_y: None
                                height: '35dp'
                                background_color: 1,1,1,0.4
                                color: 0,0.4,1,0.9
                                on_release: dropdown.select('Cough')

                            Button:
                                text: 'Shortness of breath'
                                size_hint_y: None
                                height: '35dp'
                                background_color: 1,1,1,0.4
                                color: 0,0.4,1,0.9
                                on_release: dropdown.select('Shortness of breath')

                            Button:
                                text: 'Fatigue'
                                size_hint_y: None
                                height: '35dp'
                                background_color: 1,1,1,0.4
                                color: 0,0.4,1,0.9
                                on_release: dropdown.select('Fatigue')

                            Button:
                                text: 'None of the above'
                                size_hint_y: None
                                height: '35dp'
                                background_color: 1,1,1,0.4
                                color: 0,0.4,1,0.9
                                on_release: dropdown.select('None of the above')

                    Button:
                        pos_hint:{"x":0.27,"y":0.05}
                        size_hint: 0.47, 0.075
                        font_size: (root.width**2 + root.height**2) / 15**4
                        background_color: 0,0.4,1,0.7
                        text: "Submit"
                        on_release:
                            root.manager.transition.direction = "right"
                            root.yourStatus()


            TabbedPanelItem:
                background_color: (0,0.4,1,0.7)
                text:"Next Step"


            TabbedPanelItem:
                background_color: (0,0.4,1,0.7)
                text:"Ask Us"



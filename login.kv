            font_size: (root.width**2 + root.height**2) / 15**4
            multiline: False
            password: True
            pos_hint: {"x": 0.3 , "top":0.81-0.13}
            size_hint: 0.45, 0.09
            padding: [2, (self.height-self.line_height)/2]
            text: "abc"

        Button:
            pos_hint:{"x":0.28,"y":0.06}
            size: 720, 140
            size_hint: 0.45, 0.1
            font_size: (root.width**2 + root.height**2) / 16**4
            background_color: 0,0.4,1,0.7
            text: "Login"
            on_release:
                root.manager.transition.direction = "up"
                root.loginButton()

        Button:
            pos_hint:{"x":0.28,"y":0.20}
            size_hint: 0.45, 0.1
            font_size: (root.width**2 + root.height**2) / 17.5**4
            background_color: 0,0.4,1,0.7
            text: "Don't have an Account? Create One"
            on_release:
                root.manager.transition.direction = "right"
                root.createButton()

                root.manager.transition.direction = "down"
<MainWindow>:
    canvas.before:
        Color:
            rgba: 1, 1, 1, 1
        Rectangle:
            pos: self.pos
            size: self.size
    namee: namee
    date:date

    BoxLayout:
        size: self.parent.size
        orientation: 'vertical'
        spacing: 20
        padding: 0, 20, 10, 10
        Label:
            bold: True
            halign: 'center'
            font_color: 0,0,0,1
            pos_hint: {"x":0.1, "top":1.02}
            size_hint: 0.8, 0.08
            text: "App Permissions"

        BoxLayout:
            orientation: 'horizontal'
            padding: 0, 20, 0, 0

            canvas.before:
                Color:
                    rgba: 0.2,0.43,0.128, 0.6
                Rectangle:
                    pos: 0, 950
                    size : self.parent.size

            Label:
                id: namee
                haligh: 'left'
                pos_hint:{"x": 0.1, "y":0.5}

            Label:
                bold: True
                halign: 'center'
                pos_hint:{"x": 0.08, "top":1.01}
                text: "Terms of Services and Privacy \nWe understand the sensitivity of the topic \n and have taken strong measures to ensure \n that your data is not compromised"

            Label:
                id: date
                pos_hint:{"x": 0.46, "top":1.5}
                valign: 'top'
                text: "Registered: "

        BoxLayout:
            orientation: 'horizontal'
            padding: 10, 20, 0, 0

            CheckBox:
                size_hint_x: 0.1
                on_active: root.checkbox_click1(self, self.active)
            Label:
                text_size: self.size
                color: 0,0,0,1
                valign: 'bottom'      #The default is 'bottom'
                halign: 'left'
                text: " DEVICE LOCATION  \n It is recommended that you set your location sharing to \n 'Always'. You can change this anytime later."

        BoxLayout:
            orientation: 'horizontal'
            CheckBox:
                size_hint_x: 0.1
                on_active: root.checkbox_click2(self, self.active)
            Label:
                text_size: self.size
                color: 0,0,0,1
                valign: 'bottom'      #The default is 'bottom'
                halign: 'left'
                text: "BLUETOOTH \n Monitor your device's proximity to another mobile device. \n It is recommended that you keep it ON at all times"


        BoxLayout:
            orientation: 'horizontal'
            CheckBox:
                size_hint_x: 0.1
                on_active: root.checkbox_click3(self, self.active)
            Label:
                text_size: self.size
                color: 0,0,0,1
                valign: 'center'      #The default is 'bottom'
                halign: 'left'
                text: "DATA SHARING  \n Your data will be shared only with the system administrator. The App does not allow your name nad number to be disclosed to the public at large at any time."

        Label:
            text_size: self.size
            valign:'center'
            halign:'left'
            markup: True
            color: 0,0,0,1
            text: "Please indicate your acceptance of [color=3333ff][ref=Terms of services]Terms of services[/ref][/color] and [color=3333ff][ref=Privacy Policy]Privacy Policy[/ref][/color] by click the button below."
            on_ref_press:
                import webbrowser
                webbrowser.open('http://google.com')

        Button:
            size_hint_y: 0.2
            pos_hint:{"x":0.40,"top":1.05}
            size_hint: 0.2, 0.5
            background_color: 0,0.4,1,0.7
            text: "I Agree"
            on_release:
                root.manager.transition.direction = "right"
                root.checkSelection()

<FormWindow>:
    name: "form"
    btnSymptom: btnSymptom
    age: age
    namee: namee
    travel: travel
    fever: fever
    gender: gender

